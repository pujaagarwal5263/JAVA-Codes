import java.util.Scanner;


public class FirstCode {

	public static void main(String[] args) {
	
		for(int i=0;i<=3;i++) {
			for(int j=0;j<=i;j++) {
				System.out.println("*");
				
			}
			System.out.println(" ");
		}
